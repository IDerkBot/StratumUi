            </Trigger>

            <!-- <Trigger Property="IsFocused" Value="True"> -->
            <!--     <Setter Property="Visibility" TargetName="Focus" Value="Visible" /> -->
            <!-- </Trigger> -->
        </ControlTemplate.Triggers>
    </ControlTemplate>
