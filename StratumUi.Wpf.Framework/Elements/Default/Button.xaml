            </Trigger>
            <Trigger Property="attachedProperties:Button.Position" Value="Middle">
                <Setter Property="attachedProperties:Hint.CornerRadius" Value="0" />
            </Trigger>
            <Trigger Property="attachedProperties:Button.Position" Value="Last">
