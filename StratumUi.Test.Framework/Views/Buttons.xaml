        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="3"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnText1">
                <Button Content="{DynamicResource Button}" Style="{DynamicResource BtnText}" />
            </smtx:XamlDisplay>
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnText2">
                <Button
                    Content="{DynamicResource Button}"
                    IsEnabled="False"
                    Style="{DynamicResource BtnText}" />
            </smtx:XamlDisplay>
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="3"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnText3">
