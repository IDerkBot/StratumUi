        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled5">
                <Button
                    wpf:Button.RightIcon="SinFunction"
                    Content="{DynamicResource Button}"
                    Foreground="{Binding ElementName=BtnTest, Path=Foreground}"
                    Style="{DynamicResource BtnFilled}" />
            </smtx:XamlDisplay>
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled6">
                <Button
                    wpf:Button.RightIcon="ArcTgFunction"
