            FontSize="14" />
        <Label
            Grid.Row="17"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Grouped"
            FontSize="14" />

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled1">
                <Button Content="{DynamicResource Button}" Style="{DynamicResource BtnFilled}" />
            </smtx:XamlDisplay>
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled2">
