        <Slider
            x:Name="SliderBtn"
            Grid.Row="8"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="10"
            Maximum="100"
            Minimum="0" />

        <Separator
            Grid.Row="16"
            Grid.Column="0"
            Grid.ColumnSpan="4" />

        <StackPanel
            Grid.Row="17"
            Grid.Column="1"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnGroupedFilled1">
                <Button
                    wpf:Button.Position="First"
                    Content="{DynamicResource First}"
                    Style="{DynamicResource BtnFilled}" />
            </smtx:XamlDisplay>
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnGroupedFilled2">
                <Button
                    wpf:Button.Position="Middle"
                    Content="{DynamicResource Middle}"
                    Style="{DynamicResource BtnFilled}" />
