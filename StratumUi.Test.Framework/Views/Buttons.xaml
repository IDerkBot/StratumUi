        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled7">
                <Button
                    Name="BtnTest"
                    wpf:Button.Icon="User"
                    Style="{DynamicResource BtnFilled}" />
            </smtx:XamlDisplay>
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled8">
                <Button
                    wpf:Button.Icon="User"
                    IsEnabled="False"
                    Style="{DynamicResource BtnFilled}" />
            </smtx:XamlDisplay>
        </StackPanel>
        <StackPanel
            Grid.Row="6"
            Grid.Column="1"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled9">
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
