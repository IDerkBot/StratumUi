            </smtx:XamlDisplay>
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled3">
                <Button
                    wpf:Button.IconHeight="30"
                    wpf:Button.IconWidth="30"
                    wpf:Button.LeftIcon="LinearFunction"
                    Content="{DynamicResource Button}"
                    Style="{DynamicResource BtnFilled}" />
            </smtx:XamlDisplay>
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled4">
