            </smtx:XamlDisplay>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="2"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnOutline1">
