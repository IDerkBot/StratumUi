            <smtx:XamlDisplay Margin="5" UniqueKey="BtnGroupedFilled3">
                <Button
                    wpf:Button.Position="Last"
                    Content="{DynamicResource Last}"
                    Style="{DynamicResource BtnFilled}" />
            </smtx:XamlDisplay>
        </StackPanel>

        <StackPanel
            Grid.Row="17"
            Grid.Column="2"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnGroupedOutline1">
                <Button wpf:Button.Position="First" Content="{DynamicResource First}" />
